<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Companies"
		class="sapUiPopupWithPadding"
		items="{path: '/VHCompanies'}"
		search="_handleValueHelpSearch"
		confirm="VHCompaniesDialogClose"
		cancel="VHCompaniesDialogClose"
		growing="false"
		multiSelect="true">
		<StandardListItem
			title="{Name}"
			description="{Id}" />
	</SelectDialog>
</core:FragmentDefinition>