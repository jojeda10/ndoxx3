<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Divisions"
		class="sapUiPopupWithPadding"
		items="{path: '/VHDivisions'}"
		search="_handleValueHelpSearch"
		confirm="VHDivisionsDialogClose"
		cancel="VHDivisionsDialogClose"
		growing="false"
		multiSelect="true">
		<StandardListItem
			title="{Name}"
			description="{Id}" />
	</SelectDialog>
</core:FragmentDefinition>