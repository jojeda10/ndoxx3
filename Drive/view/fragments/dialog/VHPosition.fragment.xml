<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Positions"
		class="sapUiPopupWithPadding"
		items="{path: '/VHPositions'}"
		search="_handleValueHelpSearch"
		confirm="VHPositionsDialogClose"
		cancel="VHPositionsDialogClose"
		growing="false"
		multiSelect="true">
		<StandardListItem
			title="{Name}"
			description="{Id}" />
	</SelectDialog>
</core:FragmentDefinition>