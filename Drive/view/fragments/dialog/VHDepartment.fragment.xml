<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		title="Departments"
		class="sapUiPopupWithPadding"
		items="{path: '/VHDepartments'}"
		search="_handleValueHelpSearch"
		confirm="VHDepartmentsDialogClose"
		cancel="VHDepartmentsDialogClose"
		growing="false"
		multiSelect="true">
		<StandardListItem
			title="{Name}"
			description="{Id}" />
	</SelectDialog>
</core:FragmentDefinition>