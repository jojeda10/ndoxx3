<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">
	<GenericTile press="onDocumentPress" backgroundImage="{ThumbnailUrl}" class="itemGridUpload">
		<layoutData>
			<f:GridContainerItemLayoutData minRows="2" columns="2" />
		</layoutData>
		<TileContent class="ndoxxTileCntContent" tooltip="{Name}">
			<HBox class="tileCustomContent">
				<core:Icon src="{path: 'DocumentType', formatter: '.formatter.ndoxxIconType'}" size="1.5rem"/> 

				<Text text="{
				path: 'Name',
				formatter: '.formatter.ndoxxTileTextLength'
			}" class="ndoxxTileText"></Text>

			</HBox>



		</TileContent>
	</GenericTile>
</core:FragmentDefinition>
