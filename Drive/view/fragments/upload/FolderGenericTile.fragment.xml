<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">			
		<GenericTile class="sapUiTinyMarginTop tileLayout itemGridUpload"  press="onFolderPress" frameType="OneByHalf" >
			<layoutData>
				<f:GridContainerItemLayoutData minRows="2" columns="2" />
			</layoutData>
			<TileContent class="ndoxxTileCntHalfContent" tooltip="{Name}">
				<HBox class="tileCustomContent">
					<core:Icon
					src="sap-icon://folder-blank"
					size="1.5rem"
					class="ndoxxTileFolderIcon"
					color="#F0AB00" >
				</core:Icon>
	
				<Text text="{Name}" class="ndoxxTileText"></Text>
				</HBox>
			</TileContent>
		</GenericTile>
</core:FragmentDefinition>
