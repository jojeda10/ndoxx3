<mvc:View controllerName="com.nubexx.ndoxx.Shell.controller.AccountPage" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<content>
			<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
				<VBox width="16rem">
					<Image width="100%" src="./Shell/img/ndoxx.png" tooltip="Ndoxx image" class="sapUiTinyMarginBottom"/>
					<!--<Image width="100%" src="https://www.nubexx.com/typo3conf/ext/nubexx_base/Resources/Public/Images/Logo.svg" tooltip="ndoxx image"/>-->
					<Input id="inpCompany" liveChange="onLiveChangeCompany" width="100%" placeholder="Enter Company ID" maxLength="12" submit="onEnterCompany"></Input>
					<!--<Input id="pasw" width="100%" placeholder="Password" type="Password"></Input>-->
					<Button width="100%" enabled="false" id="btnGo" text="Go" type="Emphasized" press="onEnterCompany"></Button>
				</VBox>
			</VBox>
		</content>
		<footer>
			<!-- <core:Fragment xmlns:core="sap.ui.core" fragmentName="com.nubexx.ndoxx.Shell.view.fragments.Footer" type="XML"/> -->
		</footer>
	</Page>
</mvc:View>