{
	"_version": "1.12.0",
	"sap.app": {
		"id": "com.nubexx.ndoxx.Shell",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"resources": "resources.json",
		"ach": "ach",
		"dataSources": {
			"mainService": {
				"uri": "http://localhost:9494/NdoxxProvisioning/NdoxxProvisioning.svc/",
				"type": "OData",
				"settings": {
					"odataVersion": "4.0",
					"localUri": "localService/metadata.xml"
				}
			}
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "com.nubexx.ndoxx.Shell.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"dependencies": {
			"minUI5Version": "1.60.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.nubexx.ndoxx.Shell.i18n.i18n"
				}
			},
			"": {
				"dataSource": "mainService",
				"preload": true,
				"settings": {
					"operationMode": "Server",
					"groupId": "$direct",
					"synchronizationMode": "None",
					"autoExpandSelect": true
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "com.nubexx.ndoxx.Shell.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [{
				"pattern": "",
				"name": "default",
				"target": ["default"]
			}, {
				"pattern": "home/:viewPattern:",
				"name": "home",
				"target": ["home"]
			}, 
			{
				"pattern": "accountPage",
				"name": "accountPage",
				"target": [
					"accountPage"
				]
			},
			{
				"pattern": "accountId/{accountId}",
				"name": "loginPage",
				"target": [
					"loginPage"
				]
			},
			{
				"pattern": "drive/:viewPattern:",
				"name": "drive",
				"target": ["drive"]
			}
			, {
				"pattern": "project/:viewPattern:",
				"name": "project",
				"target": ["project"]
			}
		],
			"targets": {
				"default": {
					"viewName": "Home",
					"viewId": "home",
					"viewLevel": 1
				},
				"accountPage": {
					"viewName": "AccountPage",
					"viewId": "accountPage",
					"viewLevel": 2,
					"title": "{i18n>worklistViewTitle}"
				},
				"loginPage": {
					"viewName": "LoginPage",
					"viewId": "loginPage",
					"viewLevel": 2,
					"title": "{i18n>objectViewTitle}"
				},
				"home": {
					"viewName": "Home",
					"viewId": "home",
					"viewLevel": 2
				},
				"drive": {
					"viewName": "Drive",
					"viewId": "drive",
					"viewLevel": 2
				},
				"project": {
					"viewName": "Project",
					"viewId": "project",
					"viewLevel": 2
				}
			}
		}
	}
}